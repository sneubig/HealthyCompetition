<div class="container">
	<div class="league-name">
		<h2><%= @league.name %></h2>
	</div>
	<div class="standings">
		<h2>Standings</h2>
		<% @teams.each do |team| %>
			<li> <%= team.name %> <%= team.steps %></li>
		<% end %>
	</div>
	<div class="sidebar">
		<h2>Matchups</h2>
		<div class="matchup">
			<div class="teams">
				<% @teams.each do |team| %>
					<li><%= team.name %> </li>
				<% end %>
			</div>
			
			<div class="score">
				<!-- <li> <%= @summary %> </li> -->
				<% @teams.each do |team| %>
					<li> <%= team.steps %> </li>
				<% end %>

				<!-- @week_steps_summary.each do |key, value|
					key : value
				end -->
			</div>
		</div>
	</div>
</div>